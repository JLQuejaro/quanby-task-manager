# Database
DATABASE_URL=postgresql://quanby_user:superadmin@localhost:5432/quanby_tasks

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-use-long-random-string
JWT_EXPIRES_IN=24h

# App
PORT=3001
NODE_ENV=development

# Google OAuth
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/callback/google

# Frontend URL (for redirects and email links)
FRONTEND_URL=http://localhost:3000

# Email Configuration
# For Gmail: Use App Password (not regular password)
# Generate at: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@quanby.com

# Token Expiry (in hours)
PASSWORD_RESET_TOKEN_EXPIRY=1
EMAIL_VERIFICATION_TOKEN_EXPIRY=1

# Security Settings
# Rate limiting (attempts per window)
RATE_LIMIT_MAX_ATTEMPTS=10
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_LOCKOUT_MINUTES=30

# Session Settings
SESSION_DURATION_HOURS=24
MAX_ACTIVE_SESSIONS_PER_USER=5

# Frontend Environment Variables (.env.local)
# NEXT_PUBLIC_API_URL=http://localhost:3001
# NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com